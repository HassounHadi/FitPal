<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/logo_btn"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="225dp"
        android:layout_height="350dp"
        android:layout_marginTop="-75dp"
        android:background="@drawable/rectangle_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/htext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="Height"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />

    <EditText
        android:id="@+id/height"
        android:layout_width="175dp"
        android:layout_height="37.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="Height"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/htext"
        app:layout_constraintTop_toBottomOf="@id/htext" />

    <TextView
        android:id="@+id/wtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="Weight"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/htext"
        app:layout_constraintTop_toBottomOf="@id/height" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="175dp"
        android:layout_height="37.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/wtext"
        app:layout_constraintTop_toBottomOf="@id/wtext" />

    <TextView
        android:id="@+id/gtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="Goal"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/weight"
        app:layout_constraintTop_toBottomOf="@id/weight" />

    <Spinner
        android:id="@+id/spinner_goal"
        android:layout_width="175dp"
        android:layout_height="37.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintStart_toStartOf="@id/gtext"
        app:layout_constraintTop_toBottomOf="@id/gtext" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_baseline_arrow_drop_down_circle_24"
        app:layout_constraintEnd_toEndOf="@id/spinner_goal"
        app:layout_constraintTop_toTopOf="@id/spinner_goal" />

    <Button
        android:id="@+id/plan"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:text="Request Plan"
        android:textAlignment="center"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@id/spinner_goal"
        app:layout_constraintTop_toBottomOf="@id/spinner_goal" />

</androidx.constraintlayout.widget.ConstraintLayout>