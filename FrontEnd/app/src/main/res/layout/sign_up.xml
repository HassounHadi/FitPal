<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/logo_btn"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="300dp"
        android:layout_height="575dp"
        android:background="@drawable/rectangle_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_btn" />

    <TextView
        android:id="@+id/first"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="First Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <EditText
        android:id="@+id/fName"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="First Name"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/first" />

    <TextView
        android:id="@+id/last"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="Last Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="Last Name"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/fName"
        app:layout_constraintTop_toBottomOf="@+id/last" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="Mobile Number"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fName" />

    <EditText
        android:id="@+id/pnumber"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/mobile" />

    <TextView
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="E Mail"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pnumber" />

    <EditText
        android:id="@+id/e_mail"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="E Mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/user"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/seoulnamsan"
        android:text="Username"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/e_mail" />

    <EditText
        android:id="@+id/username_sign"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="Username"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/user" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/username_sign" />

    <EditText
        android:id="@+id/password_sign"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/pass" />


    <TextView
        android:id="@+id/passconf"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="Confirm password"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/password_sign" />

    <EditText
        android:id="@+id/password_conf_sign"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/passconf" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_3"
        android:fontFamily="@font/seoulnamsan"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/password_conf_sign" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:fontFamily="@font/seoulnamsan"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/logIN"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/logIn"
        android:textColor="@color/white"
        android:fontFamily="@font/seoulnamsan"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/txt"
        app:layout_constraintTop_toTopOf="@id/txt"
        android:layout_marginLeft="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>